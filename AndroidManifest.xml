<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="action.recorder"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/icon2"
        android:label="Action Recorder" >
        <activity
            android:name=".ActionRecorderActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity 
			android:name=".Add" android:label="ADD"
			android:theme="@android:style/Theme.Dialog">
     	</activity>
     	<activity 
     		android:name=".Del" android:label="DEL"
     		android:theme="@android:style/Theme.Dialog">
     	</activity>
     	<activity 
     		android:name=".Edit" android:label="Modify"
     		android:theme="@android:style/Theme.Dialog">
     	</activity>
     	<activity 
     		android:name=".Change" android:label="Change Topic"
     		android:theme="@android:style/Theme.Dialog">
     	</activity>
        
    </application>

</manifest>